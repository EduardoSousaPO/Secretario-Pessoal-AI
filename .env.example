# ===========================================
# AI Secretary - Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# Configure these in Vercel Dashboard for production

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_ALLOWED_USERS=123456,789012

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Notion
NOTION_TOKEN=secret_your_notion_integration_token
NOTION_DATABASE_ID=your_database_id

# Optional: Webhook secret for Telegram (recommended)
TELEGRAM_WEBHOOK_SECRET=your_random_secret_string
